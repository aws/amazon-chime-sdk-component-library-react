{
  "compilerOptions": {
    "outDir": "./build",
    "rootDirs": ["app"],
    "downlevelIteration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "types": [ "node" ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": false,    
    "target": "es5",
    "lib": ["es6", "es7", "es2018", "dom"],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules",
    "build"
  ]
}